package example.com;
import java.time.LocalDate;
import java.util.ArrayList;

public class Flight {

	int flightID;
	String origin;
	String destination;
	LocalDate departureDate;
	
	ArrayList<Passenger> passenger=new ArrayList<>();
	
	public Flight(int flightID, String origin, String destination, LocalDate departureDate)
	{
		this.departureDate=departureDate;
		this.flightID=flightID;
		this.origin=origin;
		this.destination=destination;
	}
	
	public String addPassenger(Passenger p)
	{
		passenger.add(p);
		System.out.println(p.p_name + " is added");
		return(p.p_name);		
	}
	
}	

