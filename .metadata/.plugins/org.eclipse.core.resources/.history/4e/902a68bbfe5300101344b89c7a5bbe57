package example.com;

public class BiggestOfNumbersinArray {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int[] numbers= {10,30,20,50,40,5,1};
		int largestNumber=calculate_max(numbers,numbers.length);
		
		System.out.println("The largest number is " + largestNumber);

	}
	
	private static int calculate_max(int[] numbers, int length) {
		// TODO Auto-generated method stub
		
		int i=0;
		int largest=numbers[0];
		
		for (i=0;i<length;i++)
		{
			if (numbers[i]>largest)
				largest=numbers[i];
					
		}
		return largest;
	}

	

}
